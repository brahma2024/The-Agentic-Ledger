RSS_FETCH_LIMIT=20
RSS_CACHE_TTL_MINUTES=30

# ===========================================
# arXiv Configuration
# ===========================================
# Categories: cs.CR (Cryptography), q-fin.TR (Trading), cs.AI, cs.LG (Machine Learning)
ARXIV_CATEGORIES=["cs.CR", "q-fin.TR", "cs.AI", "cs.LG"]
ARXIV_MAX_RESULTS=10
ARXIV_LOOKBACK_DAYS=365

# ===========================================
# Convergence Engine Configuration
# ===========================================
# Enable/disable the convergence engine (Phase 1.5)
# When enabled, selects stories by Impact x Convergence score
CONVERGENCE_ENABLED=true

# Number of top news items to analyze for convergence
CONVERGENCE_TOP_N_NEWS=5

# Number of arXiv categories to match per news item
CONVERGENCE_CATEGORIES_PER_NEWS=3

# Number of papers to search per matched category
CONVERGENCE_PAPERS_PER_CATEGORY=3

# Minimum cosine similarity for category matching (0-1)
CONVERGENCE_MIN_SIMILARITY=0.35

# Minimum paper relevance score to include (0-1)
CONVERGENCE_MIN_RELEVANCE=0.4

# Weight for convergence vs impact in combined score
# Formula: combined = (1 - weight) * impact + weight * convergence
# Default 0.6 means 60% convergence, 40% impact
CONVERGENCE_WEIGHT=0.6

# Cache TTL for taxonomy embeddings (days)
CONVERGENCE_CACHE_TTL_DAYS=30

# Embedding model for semantic similarity
# text-embedding-3-small is cheap (~$0.00002 per 1K tokens)
EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# Podcast Branding
# ===========================================
PODCAST_NAME=The Agentic Ledger

# ===========================================
# Audio Settings
# ===========================================
TTS_MODEL=gpt-4o-mini-tts
QUANT_VOICE=echo
HUSTLER_VOICE=fable
CROSSFADE_MS=200
BG_MUSIC_VOLUME_DB=-20

# ===========================================
# Video Settings
# ===========================================
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
MAX_DURATION_SECONDS=300
BACKGROUND_COLOR=#1a1a2e

# ===========================================
# Subtitle Settings
# ===========================================
SUBTITLE_FONT=Montserrat-Bold
SUBTITLE_FONT_SIZE=72
# Colors in ASS BGR format (not RGB)
QUANT_COLOR=&H00FFD700
HUSTLER_COLOR=&H0000FF00

# ===========================================
# Script Generation
# ===========================================
TARGET_DURATION_SECONDS=298
TARGET_WORD_COUNT=745
LLM_MODEL=gpt-4o

# ===========================================
# YouTube Data API (for trending videos - legacy)
# ===========================================
# Get your API key from: https://console.cloud.google.com/apis/credentials
# YOUTUBE_API_KEY=your-youtube-api-key

# YouTube Upload Settings (Phase 5 - deferred)
# YOUTUBE_CLIENT_SECRETS_PATH=client_secrets.json
# YOUTUBE_CREDENTIALS_PATH=youtube_credentials.json

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
